#!/usr/bin/env python3
import sys
from pathlib import Path
from utils.generator.network_utils import parse_config, generate_network

def main(args):
    if len(args) < 3 or len(args) % 2 == 0:
        print("USAGE: ./my_torch_generator config_file_1 nb_1 [config_file_2 nb_2...]")
        sys.exit(1)

    output_dir = "./networks"
    Path(output_dir).mkdir(exist_ok=True)
    
    for i in range(1, len(args), 2):
        config_path = args[i]
        try:
            num_networks = int(args[i + 1])
        except ValueError:
            print(f"Error: '{args[i + 1]}' is not a valid number.")
            sys.exit(1)

        print(f"Generating {num_networks} networks from {config_path}...")
        config = parse_config(config_path)
        for network_id in range(1, num_networks + 1):
            generate_network(config, network_id, output_dir, config_path)

if __name__ == "__main__":
    main(sys.argv)
